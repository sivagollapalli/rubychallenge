= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-signin'}) do |f|
  %h2{:class => 'form-signin-heading'} Sign in
  = f.email_field :email, placeholder: 'Email'
  = f.password_field :password, placeholder: 'Password'
  - if devise_mapping.rememberable?
    %div.remember-me= f.check_box :remember_me
  %div= f.submit "Sign in", :class => 'btn btn-primary'

  = render "devise/shared/links"
